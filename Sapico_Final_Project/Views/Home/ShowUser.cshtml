
@{
    ViewBag.Title = "ShowUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userList = (IEnumerable<user>)ViewData["UserList"];
}

<style>
    <style >
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border: 1px solid #ddd; /* Border color */
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #ddd;
    }

    button {
        padding: 8px 12px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        margin-right: 5px;
    }

        button:hover {
            background-color: #45a049;
        }

    form {
        display: inline; /* Align forms horizontally */
    }
</style>

</style>
<h2>Show User</h2>
<table border="1">
    @{
        foreach (var item in userList)
        {
            <tr>
                <td style="padding: 20px;">@item.firstname</td>
                <td style="padding: 20px;">@item.lastname</td>
                <td style="padding: 20px;">@item.email</td>
                <td style="padding: 20px;">@item.password</td>
                <td style="padding: 20px;">
                    <form method="post" action="Edit">
                        <input type="hidden" name="id" value="@item.user_id" />
                        <button type="submit">Edit</button>
                    </form>
                    <form method="post" action="Delete">
                        <input type="hidden" name="id" value="@item.user_id" />
                        <button type="submit">Delete</button>
                    </form>
                </td>

            </tr>
        }



    }
</table>

