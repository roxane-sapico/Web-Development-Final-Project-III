
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userList = (IEnumerable<user>)ViewData["User"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <style>

        body {
            background: linear-gradient(to right, #66a6ff, #3366cc, #0f2027);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: black;
        }

        #form {
            width: 500px;
            padding: 35px;
            background-color: whitesmoke;
            border-radius: 3px;
            font-size: 15px;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }

            #form h1 {
                color: #0f2027;
            }

            #form button {
                padding: 10px;
                margin-top: 10px;
                width: 100%;
                color: black;
                background-color: rgb(41, 57, 194);
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

        .input-control {
            margin-bottom: 15px;
            display: flex;
            flex-direction: column;
            color: white;
        }

            .input-control input {
                border: 2px solid #f0f0f0;
                border-radius: 4px;
                font-size: 12px;
                padding: 10px;
                width: 100%;
                color: black;
            }

                .input-control input:focus {
                    outline: 0;
                    color: black;
                }

            .input-control.success input {
                border-color: #09c372;
                color: black;
            }

            .input-control.error input {
                border-color: #ff3860;
            }

            .input-control .error {
                color: #ff3860;
                font-size: 9px;
                height: 13px;
            }
    </style>
</head>
<body>
    <div class="container">
        <form action="Update" method="post">
            <h1>Login Form</h1>
            @{
                foreach (var edit in userList)
                {
                    <div class="input-control">
                        <label for="firstname">First Name:</label>
                        <input type="hidden" name="id" value="@edit.user_id" />
                        <input type="text" class="input-control" id="firstname" placeholder="Enter first name" name="firstname" value="@edit.firstname" required>
                    </div>
                    <div class="input-control">
                        <label for="lastname">Last Name:</label>
                        <input type="text" class="input-control" id="lastname" placeholder="Enter last name" name="lastname" value="@edit.lastname" required>
                    </div>
                    <div class="input-control">
                        <label for="Email">Email:</label>
                        <input type="text" class="input-control" id="Email" placeholder="Enter email address" name="email" value="@edit.email" required>
                    </div>
                    <div class="input-control">
                        <label for="Password">Password:</label>
                        <input type="password" class="input-control" id="Password" placeholder="Enter password" name="password"  value="@edit.password"  required>
                    </div>
                    <button type="submit">Submit</button>
                }
            }
        </form>
    </div>
</body>
</html>


